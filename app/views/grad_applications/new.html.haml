      %tr
        %td= label :grad_application, :last_name, 'Last Name: '
        %td= create_form_input_field :text_field, :grad_application, 'last_name'
        %td= create_form_error :grad_application, 'last_name', flash[:requirement]['last_name'][0] if (flash[:requirement] and flash[:requirement]['last_name'])
        %td= label :grad_application, :ug_inst_city, 'Undergraduate Institute City: '
