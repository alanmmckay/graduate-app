%h1 Create Application
#main
  - if flash[:notice]
    #notice.message= flash[:notice]
  - elsif flash[:warning]
    #warning.message= flash[:warning]

  = yield

= form_tag grad_application_create_path do
  %table
    %tbody
      %tr
        %td= label :grad_application, :university, 'University: '
        %td= create_form_input_field :text_field, :grad_application, 'university'
        %td= create_form_error :grad_application, 'university', flash[:requirement]['university'][0] if (flash[:requirement] and flash[:requirement]['university'])
        %td= label :grad_application, :date, 'Today\'s Date: '
        %td= create_form_input_field :date_field, :grad_application, 'date'
        %td= create_form_error :grad_application, 'date', flash[:requirement]['date'][0] if (flash[:requirement] and flash[:requirement]['date'])
    %tbody
      %tr
        %td= label :grad_application, :first_name, 'First Name: '
        %td= create_form_input_field :text_field, :grad_application, 'first_name', {:value => @grad_application.first_name, :class => "form-control", :placeholder => "First Name", :disabled => false}, {:class => "input-group-text"}
        %td= create_form_error :grad_application, 'first_name', flash[:requirement]['first_name'][0], {:class => "alert alert-danger"} if (flash[:requirement] and flash[:requirement]['first_name'])
        %td= label :grad_application, :ug_inst, 'Undergraduate Institute: '
        %td= create_form_input_field :text_field, :grad_application, 'ug_inst'
        %td= create_form_error :grad_application, 'ug_inst', flash[:requirement]['ug_inst'][0] if (flash[:requirement] and flash[:requirement]['ug_inst'])
        %td= label :grad_application, :grad_deg_earned, 'Graduate Degree Earned: '
