=new_header "Letter of recommendation submission hub for "+ @letter_of_recommendation.email
- if flash[:notice]
  %div{class: 'alert alert-warning'}
    = flash[:notice]
- elsif flash[:warning]
  %div{class: 'alert alert-danger'}
    = flash[:warning]
%div{:class => "row card", :align => "center"}
  %h4.card-header
    = label :letter_of_recommendation, 'letter_of_recommendation', "Letter of Recommendation"
  %div.card-body
    %h6 This will become a hub for options for submitters of letters of recommendation. The letter in progress will be listed below.
    %div{:name => "letter_of_recommendation"}= @letter_of_recommendation.letter.html_safe

    = link_to "Continue Editing", '/letter_of_recommendation/edit/'+@letter_of_recommendation.url.to_s
    = link_to "Submit", '/letter_of_recommendation/submit/'+@letter_of_recommendation.url.to_s, method: :post