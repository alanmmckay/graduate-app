= new_header "Degree creation page for Graduate Application"
%hr
%div.card
  - if flash[:degree]
    %h3.card-header= flash[:degree]
    %div.card-body
      = link_to "Continue Application", grad_application_new_path
= form_tag students_degree_creation_path, {class: "card"} do
  %h2.card-header Please fill the following information:
  %div.card-body
    = render :file => 'layouts/degree.html.haml'
    %br
    %div{:class => "input-group"}
      = submit_tag "Add Degree", {:class => "btn btn-alternative", :type =>"submit", :disabled => false}
= link_to "Cancel", users_show_path